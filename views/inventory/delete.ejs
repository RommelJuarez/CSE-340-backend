<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error=> { %>
      <li>
        <%= error.msg %>
      </li>
      <% }) %>
  </ul>
  <% } %>
    <% if (title) { %>
      <h1>
        <%= title %>
      </h1>
      <% } else { res.redirect('/') } %>

        <%- messages() %>
          <form action="/inv/delete" method="post" class="register-form" id="updateForm">
            <p class="warning">Confirm Deletion This action is permanent.</p>

            <label for="inv_make">Make</label>
            <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly />

            <label for="inv_model">Model</label>
            <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly />

            <label for="inv_year">Year</label>
            <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly />

            <label for="inv_description">Description</label>
            <textarea id="inv_description" name="inv_description" readonly><%= inv_description %></textarea>

            <label for="inv_image">Image Path</label>
            <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>" readonly />

            <label for="inv_thumbnail">Thumbnail Path</label>
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>" readonly />

            <label for="inv_price">Price</label>
            <input type="text" id="inv_price_display" name="inv_price_display"
              value="<%= Number(inv_price).toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 2 }) %>"
              readonly />
            <input type="hidden" id="inv_price" name="inv_price" value="<%= inv_price %>" />

            <label for="inv_miles">Miles</label>
            <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles %>" readonly />

            <label for="inv_color">Color</label>
            <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>" readonly />

            <label for="classification_id">Classification</label>
            <input type="text" id="inv_color" name="inv_color" value="<%= classification_id %>" readonly />

            <input type="hidden" name="inv_id" value="<%= inv_id %>" />
            <button type="submit">Delete Vehicle</button>
          </form>

          <% if (locals.inv_id) { %>
            value="<%= locals.inv_id %>"
              <% } %>