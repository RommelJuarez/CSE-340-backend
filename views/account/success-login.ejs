<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% if (title) { %>
  <h1><%= title %></h1>
  
<% } else { res.redirect('/') } %>



<main id="account-management">
  <% if (accountData) { %>
    <%- messages() %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <%- accountManagmentView %>
    <p>
      <a href="/account/update/">
        Update Account Information
      </a>
    </p>
    <h3>Favorites</h3>
    <p>
      <a href="/favorites/">
        Go to Favorites
      </a>
    </p>

    
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/">Go to Inventory Management</a>
      </p>
    <% } %>
  <% } else { %>
    <h2>Please log in to view your account.</h2>
  <% } %>
</main>


